<?xml version="1.0" encoding="utf-8"?>

<!--
  - This file contains the sprites for the 'modern' style GUI.
  -
  - *** Style Notes ***
  - Unless otherwise noted the real_texture_placement property
  - is only for quick texture size referance and is /not/
  - required.
  -->

<sprites>

	<!--
	==========================================
	- Scrollbar -
	==========================================
	-->
	<sprite name = "ModernScrollBack">
		<image 	texture = "global/modern/scrollback.png"
			real_texture_placement = "0 0 15 103"
			size = "0 0 100% 100%"
		/>
	</sprite>
	<sprite name = "ModernScrollBar">
		<image 	texture = "global/modern/scrollbar.png"
			real_texture_placement = "0 0 15 15"
			size = "0 0 100% 100%"
		/>
	</sprite>
	<!--
	==========================================
	- Window -
	==========================================
	-->
	<sprite name = "ModernWindow">

		<!-- background -->
		<image backcolor = "12 12 12"/>
		<image texture = "global/modern/background.png"
			texture_size = "0 0 1024 1024"
			size = "12 22 100%-12 100%-12"
		/>

		<!-- shading -->
		<!-- we just mirror the same texture on the top and bottom -->
		<image texture = "global/modern/shadow-high.png"
			texture_size = "0 0 1024 176"
			size = "12 100%-188 100%-12 100%-12"
		/>

		<image texture = "global/modern/shadow-high.png"
			texture_size = "1024 176 0 0"
			size = "12 22 100%-12 188"
		/>

		<!-- top and bottom edge -->
		<image texture = "global/modern/border-top.png"
			real_texture_placement = "0 0 1259 6"
			size = "10 19 100%-10 25"
		/>
		<image texture = "global/modern/border-bottom.png"
			real_texture_placement = "0 0 1259 6"
			size = "10 100%-15 100%-10 100%-9"
		/>

		<!-- title frame -->
		<image texture = "global/modern/titlebar-middle.png"
			real_texture_placement = "0 0 138 23"
			size = "50%-69 11 50%+69 34"
		/>
		<image texture = "global/modern/titlebar-left.png"
			real_texture_placement = "0 0 34 33"
			size = "50%-98 4 50%-64 37"
		/>
		<image texture = "global/modern/titlebar-right.png"
			real_texture_placement = "0 0 34 33"
			size = "50%+64 4 50%+98 37"
		/>

	</sprite>

	<!--
	==========================================
	- Dialog -
	==========================================
	-->
	<sprite name="ModernDialog">

		<!-- background -->
		<image texture = "global/modern/background.png"
			texture_size = "0 0 512 512"
			size = "4 0 100%-4 100%-4"
		/>

		<!-- shading -->
		<!-- we just mirror the same texture on the top and bottom -->
		<image texture = "global/modern/shadow-low.png"
			texture_size = "0 0 1024 78"
			size = "4 100%-82 100%-4 100%-4"
		/>

		<image texture = "global/modern/shadow-low.png"
			texture_size = "1024 78 0 0"
			size = "4 0 100%-4 78"
		/>

		<!-- top and bottom edge -->
		<image texture = "global/modern/border-top.png"
			real_texture_placement = "0 0 1259 6"
			size = "3 0%-3 100%-4 4"
		/>
		<image texture = "global/modern/border-bottom.png"
			real_texture_placement = "0 0 1259 6"
			size = "3 100%-7 100%-4 100%-1"
		/>

		<!-- corners -->
		<image texture = "global/modern/dialog-deco-top.png"
			real_texture_placement = "0 0 63 29"
			texture_size = "63 0 0 29"
			size = "-13 -20 50 9"
		/>
		<image texture = "global/modern/dialog-deco-top.png"
			real_texture_placement = "0 0 63 29"
			texture_size = "0 0 63 29"
			size = "100%-50 -20 100%+13 9"
		/>
		<image texture = "global/modern/dialog-deco-bottom.png"
			real_texture_placement = "0 0 43 34"
			texture_size = "43 0 0 34"
			size = "-12 100%-23 31 100%+11"
		/>
		<image texture = "global/modern/dialog-deco-bottom.png"
			real_texture_placement = "0 0 43 34"
			texture_size = "0 0 43 34"
			size = "100%-31 100%-23 100%+12 100%+11"
		/>

		<!-- title frame -->
		<image texture = "global/modern/titlebar-middle.png"
			real_texture_placement = "0 0 138 23"
			size = "50%-69 0%-11 50%+69 12"
		/>
		<image texture = "global/modern/titlebar-left.png"
			real_texture_placement = "0 0 34 32"
			size = "50%-98 0%-18 50%-64 15"
		/>
		<image texture = "global/modern/titlebar-right.png"
			real_texture_placement = "0 0 34 32"
			size = "50%+64 0%-18 50%+98 15"
		/>
	</sprite>

	<!--
	==========================================
	- Box -
	==========================================
	-->
	<sprite name="ModernDarkBoxGold">
		<!-- borders -->
		<image texture = "global/modern/gold-separator.png"
			real_texture_placement = "0 0 806 1"
			size = "0 0 100% 1"
		/>
		<image texture = "global/modern/gold-separator.png"
			real_texture_placement = "0 0 806 1"
			size = "0 100%-1 100% 100%"
		/>
		<!-- background -->
		<image backcolor = "12 12 12 100"
			size = "0 1 100% 100%-1"
		/>
	</sprite>
	<sprite name="ModernDarkBoxWhite">
		<!-- borders -->
		<image texture = "global/modern/white-separator.png"
			real_texture_placement = "0 0 806 1"
			size = "0 0 100% 1"
		/>
		<image texture = "global/modern/white-separator.png"
			real_texture_placement = "0 0 806 1"
			size = "0 100%-1 100% 100%"
		/>
		<!-- background -->
		<image backcolor = "12 12 12 100"
			size = "0 1 100% 100%-1"
		/>
	</sprite>
	<sprite name = "ModernDarkBoxGoldNoBottom">
		<image texture = "global/modern/gold-separator.png"
			real_texture_placement = "0 0 806 1"
			size = "0 0 100% 1"
		/>
		<image backcolor = "12 12 12 100"
			size = "0 1 100% 100%"
		/>
	</sprite>
	<sprite name = "ModernDarkBoxGoldNoTop">
		<image texture = "global/modern/gold-separator.png"
			real_texture_placement = "0 0 806 1"
			size = "0 100%-1 100% 100%"
		/>
		<image backcolor = "12 12 12 100"
			size = "0 0 100% 100%-1"
		/>
	</sprite>
	<!--
	==========================================
	- Shading -
	==========================================
	-->
	<sprite name = "ModernItemBackShadeLeft">
		<image texture = "global/modern/item-shading-left.png"
			real_texture_placement = "0 0 148 30"
		/>
	</sprite>
	<sprite name = "ModernItemBackShadeRight">
		<image texture = "global/modern/item-shading-right.png"
			real_texture_placement = "0 0 148 30"
		/>
	</sprite>
	<!-- A translucent black background for behind dialogs. -->
	<sprite name = "modernFade">
		<image 	backcolor="0 0 0 85"
			size="0 0 100% 100%"
		/>
	</sprite>
	<!--
	==========================================
	- Lines -
	==========================================
	-->
	<sprite name = "ModernGoldLine">
		<image texture = "global/modern/gold-separator.png"
			real_texture_placement = "0 0 806 1"
		/>
	</sprite>
	<sprite name="ModernWhiteLine">
		<image texture = "global/modern/white-separator.png"
			real_texture_placement = "0 0 806 1"
			/>
	</sprite>
</sprites>
